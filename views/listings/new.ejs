<body>
    <h3>Create a new listing</h3>
    <form method="POST" action="/listings">
  <input type="text" name="listing[title]" placeholder="Enter title" id="">
  <br><br>
  <textarea type="text" name="listing[description]" placeholder="Enter description" id=""></textarea>
  <br><br>
  <input type="text" name="listing[image]" placeholder="Enter image URL/Link" id="">
  <br><br>
  <input type="number" name="listing[price]" placeholder="Enter price" id="">
  <br><br>
  <input type="text" name="listing[country]" placeholder="Enter country" id="">
  <br><br>
  <input type="text" name="listing[location]" placeholder="Enter location" id="">
  <button>Add</button>
</form>
</body>
